#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
    FILE *fin,*fout;
    unsigned char utf8;
    int offset=0, done = 0;
    unsigned short utf16;

    if(argc>=2)
    {
         if((fin = fopen(argv[2], "r"))==NULL)
            {
                fprintf(stderr,"ERROR, CANNOT OPEN AN INPUT FILE.\n");
                return 1;
            }
    }
    else
        {fin = stdin;}

    if(argc>=4)
    {
        if((fout = fopen(argv[4], "w"))==NULL)
            {
                fprintf(stderr,"ERROR, CANNOT OPEN AN OUTPUT FILE.\n");
                return 2;
            }
    }
    else
        {fout = stdout;}

    while (fread(&utf8, 1, 1, fin))
    {
        utf16=0;
        offset++;
        if ((utf8 >> 7) == 0)
        {
            utf16 += utf8;
            done = 1;
        }
        else if ((utf8 >> 5) == 6)
        {
            utf8 = utf8 & 31;
            utf16 += utf8;
            utf16 = utf16 << 6;
            fread(&utf8, 1, 1, fin);
            offset++;

            if ((utf8 >> 6) == 2)
            {
                utf8 = utf8 & 63;
                utf16 += utf8;
                done = 1;
            }
            else
                fprintf(stderr, "ERROR IN %d byte.\n", offset);
        }
        else if ((utf8 >> 4) == 14)
        {
            utf8 = utf8 & 15;
            utf16 += utf8;
            utf16 = utf16 << 6;
            fread(&utf8, 1, 1, fin);
            offset++;

            if ((utf8sym >> 6) == 2)
            {
                utf8 = utf8 & 63;
                utf16 += utf8;
                utf16 = utf16 << 6;
                fread(&utf8, sizeof(char), 1, fin);
                offset++;

                if ((utf8 >> 6) == 2)
                {
                    utf8 = utf8 & 63;
                    utf16 += utf8;
                    done = 1;
                }
                else
                    fprintf(stderr, "ERROR IN %d byte.\n", offset);
            }
            else
                fprintf(stderr, "ERROR IN %d byte.\n", offset);
        }
        else
            fprintf(stderr, "ERROR IN %d byte.\n", offset);
        if (done)
        {
            fwrite(&utf16, sizeof(utf16), 1, fout);
            done = 0;
        }
    }

    printf("\n");

    fclose(fin);
    fclose(fout);

    return(0);
}
